pipeline {
    agent any

    environment {
        // Optional: Define the target build output directory
        BUILD_DIR = "${env.WORKSPACE}/target"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ”„ Checking out code from GitHub repository...'
                git branch: 'main', url: 'https://github.com/Jyothsnarachuri/javaproject'
            }
        }

        stage('Compile Java Code') {
            steps {
                echo 'ğŸ”§ Compiling the Java project using Maven...'
                sh 'mvn clean install'
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo "ğŸ“¦ Archiving JAR files from target/ directory..."
                archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: false
            }
        }

        stage('Display Workspace Contents') {
            steps {
                echo "ğŸ“ Listing contents of workspace target directory:"
                sh 'ls -lh ${WORKSPACE}/target'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and archiving successful!'
        }
        failure {
            echo 'âŒ Build failed. Please check console output for errors.'
        }
    }
}
